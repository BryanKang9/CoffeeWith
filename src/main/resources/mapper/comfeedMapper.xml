<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bit.data.dao.ComFeedDao">
    <select id="selectMaxNum" resultType="int">
        select ifnull(max(num),0) from fd
    </select>
    <select id="selectTotalCount" parameterType="Map" resultType="int">
        select count(*) from fd
        <if test="searchcolumn!=null and searchword!=null">
            where ${searchcolumn} like concat ('%',#{searchword},'%')
        </if>
    </select>
    <select id="selectFeed" parameterType="int" resultType="fddto">
        select * from fd where fd_id=#{fd_id}
    </select>
    <select id="searchFeedByTag" parameterType="Map" resultType="fddto">
        select * from fd
        <if test="searchcolumn!=null and searchword!=null">
            where ${searchcolumn} like concat ('%',#{searchword},'%')
        </if>
        order by w_date desc;
    </select>
    <insert id="insertFeed" parameterType="fddto">
        insert into fd values (null,${cf_id},${ur_id},#{fd_txt},#{fd_photo},now(),null,0)
    </insert>
    <update id="updateFeed" parameterType="fddto">
        update fd set fd_txt=#{fd_txt},fd_photo=#{fd_photo},w_date=null,u_date=now() where fd_id=#{fd_id}
    </update>
    <delete id="deleteFeed" parameterType="int">
        delect from fd where fd_id=#{fd_id}
    </delete>
    <update id="updateLikes" parameterType="int">
        update fd set likes = likes+1 where fd_id=#{fd_id}
    </update>
    <insert id="insertPhoto" parameterType="fddto">
        insert into cf_img values (null,${cf_id},${fd_photo},'/images/upload/',now(),${fd_id},null)
    </insert>
</mapper>